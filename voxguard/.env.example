# ============================================================================
# VoxGuard - Voice Network Fraud Detection Platform
# Environment Variables Template
# Copy this file to .env and fill in your values
# ============================================================================

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================

# YugabyteDB (PostgreSQL-compatible distributed database)
YUGABYTE_PASSWORD=your_secure_password_here

# ClickHouse (Analytics database)
CLICKHOUSE_PASSWORD=your_secure_password_here

# QuestDB (Time-series database)
QUESTDB_PASSWORD=your_secure_password_here

# Homer (SIP capture database)
HOMER_DB_PASSWORD=your_secure_password_here

# =============================================================================
# API & AUTH SECRETS
# =============================================================================

# Hasura GraphQL Engine admin secret
HASURA_ADMIN_SECRET=your_secure_secret_here

# JWT Secret for authentication (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_32_char_minimum_secret_here

# =============================================================================
# MONITORING
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=your_secure_password_here

# =============================================================================
# NCC COMPLIANCE (Nigerian Communications Commission)
# =============================================================================

# Enable NCC compliance features
NCC_ENABLED=false

# NCC ATRS API credentials (obtain from NCC)
NCC_CLIENT_ID=
NCC_CLIENT_SECRET=

# ICL License number
NCC_ICL_LICENSE=

# NCC SFTP credentials for report uploads
NCC_SFTP_HOST=sftp.ncc.gov.ng
NCC_SFTP_USER=

# =============================================================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# =============================================================================

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Email SMTP settings (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Deployment environment: development, staging, production
NODE_ENV=development
