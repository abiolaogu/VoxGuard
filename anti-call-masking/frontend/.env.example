# ACM Admin Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# Hasura GraphQL Engine
# The URL to your Hasura GraphQL endpoint
VITE_HASURA_ENDPOINT=http://localhost:8082/v1/graphql

# WebSocket endpoint for real-time subscriptions
VITE_HASURA_WS_ENDPOINT=ws://localhost:8082/v1/graphql

# Hasura admin secret (for development - use JWT in production)
VITE_HASURA_ADMIN_SECRET=your_hasura_admin_secret

# API Endpoints
# Management API base URL
VITE_API_BASE_URL=http://localhost:8081

# ACM Detection Engine URL
VITE_ACM_ENGINE_URL=http://localhost:8080

# Application Settings
VITE_APP_NAME=ACM Monitor
VITE_APP_VERSION=2.0.0

# Optional: Analytics
# VITE_ANALYTICS_ID=your_analytics_id
