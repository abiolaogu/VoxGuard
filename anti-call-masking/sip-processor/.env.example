# Environment variables for SIP Processor
# Copy this file to .env and customize

# Service Configuration
DEBUG=false
APP_NAME=Anti-Call Masking SIP Processor
APP_VERSION=1.0.0

# Redis Configuration (real-time counters)
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=20

# PostgreSQL Configuration (long-term CDR logs)
POSTGRES_URL=postgresql+asyncpg://cdr_user:cdr_secure_password@localhost:5432/cdr_logs
POSTGRES_POOL_SIZE=10

# SIP Signaling Configuration
SIP_INTERFACE=eth0
SIP_PORT=5060

# Detection Configuration
DETECTION_WINDOW_SECONDS=5
DETECTION_THRESHOLD=5
MASKING_PROBABILITY_THRESHOLD=0.7

# Model Configuration
MODEL_PATH=models/xgboost_masking.json

# CDR Metrics Configuration
CDR_WINDOW_SECONDS=300
