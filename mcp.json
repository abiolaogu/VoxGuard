{
  "mcpServers": {
    "github": {
      "type": "remote",
      "url": "https://api.github.com/mcp",
      "toolsets": ["repos", "issues", "pull_requests", "actions"]
    },
    "sales-automation": {
      "command": "python",
      "args": ["mcp-server/sales_server.py"],
      "env": {
        "CLAY_API_KEY": "${CLAY_API_KEY}",
        "INSTANTLY_API_KEY": "${INSTANTLY_API_KEY}",
        "APOLLO_API_KEY": "${APOLLO_API_KEY}"
      }
    }
  }
}
